@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Course>;

<h2>Courses</h2>

<div class="margin">
  @if (@Model.Count == 0)
  {
    <h3>No courses have been added to the registry</h3>
  }
  <ul>
    @foreach (Course course in Model)
    {
      <li>@Html.ActionLink($"{course.NameOfCourse}", "Details", new { id = course.CourseId })</li>
    }
  </ul>
</div>

<p>@Html.ActionLink("Add new course", "Create")</p>